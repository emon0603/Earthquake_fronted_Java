<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Framgent.EmergencyFragment"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"

    >




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One tap, Instant Resure"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"

                />
            <TextView
                android:id="@+id/helpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click the help button to call the help"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                />


        </LinearLayout>




        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_260sdp"
            android:src="@drawable/ic_help"
            />

        <ImageView
            android:id="@+id/image_bt"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:src="@drawable/ic_help_four"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerInParent="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HELP"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            />




    </RelativeLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help is on the way!\nETA: 15 Minitues"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="-60dp"
        />

</LinearLayout>